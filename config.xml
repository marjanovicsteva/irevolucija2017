<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.nikolatrajkovic.irevolucija"
    versionCode = "10"
    version     = "1.2.0" >

<!-- versionCode is optional and Android only -->

  <name>#IR17</name>

  <description>
      Oficijalna aplikacija za konferenciju iRevolucij-e 2017.
  </description>

  <author href="2017.irevolucija.net" email="nikola.trajkovic@irevolucija.net">
      Nikola Trajkovic
      Stevan Marjanovic
  </author>

  <access origin="*"/>

  <preference name="orientation"                value="default" />        <!-- landscape i portret mode-->
  <preference name="target-device"              value="universal" />      <!-- da je za svaki device (nemam pojma na sta se odnosi) -->
  <preference name="fullscreen"                 value="true" />           <!-- da app bude u full screenu tako sto ce sakriti status bar -->
  <preference name="stay-in-webview"            value="false" />          <!-- kada je false svaki externi link ce biti otvoren u default browseru, ako je true bice otvoren u browseru aplikacije -->
  <preference name="android-installLocation"    value="auto" />           <!-- ovo je za instalaciju za android (integrisana memorija ili SD kartica) -->

  <platform name="ios">
    <icon src="android/mipmap-ldpi/ic_launcher.png" platform="android" qualifier="ldpi" />
    <icon src="android/mipmap-mdpi/ic_launcher.png" platform="android" qualifier="mdpi" />
    <icon src="android/mipmap-hdpi/ic_launcher.png" platform="android" qualifier="hdpi" />
    <icon src="android/mipmap-xhdpi/ic_launcher.png" platform="android" qualifier="xhdpi" />
    <icon src="android/mipmap-xxhdpi/ic_launcher.png" platform="android" qualifier="xxhdpi" />
    <icon src="android/mipmap-xxxhdpi/ic_launcher.png" platform="android" qualifier="xxxhdpi" />
  </platform>
<!-- <icon src="fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" /> -->

<!--  <icon src="icon.png" /> -->
  <platform name="ios">
    <icon src="ios/AppIcon.appiconset/Icon-App-57x57@1x.png" width="57" height="57" />
    <icon src="ios/AppIcon.appiconset/Icon-App-57x57@2x.png" width="114" height="114" />
    <icon src="ios/AppIcon.appiconset/Icon-App-72x72@1x.png" width="72" height="72" />
    <icon src="ios/AppIcon.appiconset/Icon-App-72x72@2x.png" width="144" height="144" />
    <icon src="ios/AppIcon.appiconset/Icon-App-60x60@1x.png" width="60" height="60" />
    <icon src="ios/AppIcon.appiconset/Icon-App-60x60@2x.png" width="120" height="120" />
    <icon src="ios/AppIcon.appiconset/Icon-App-60x60@3x.png" width="180" height="180" />
    <icon src="ios/AppIcon.appiconset/Icon-App-76x76@1x.png" width="76" height="76" />
    <icon src="ios/AppIcon.appiconset/Icon-App-76x76@2x.png" width="152" height="152" />
  </platform>

</widget>
